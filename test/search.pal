-- Mostly copied from the Brinch Hansen textbook
-- First collects 10 integers for a table
-- Then each input is a number to search for in the list
-- During the search phase input 0 to quit
-- The number searched for and its index will be output for each query
-- -1 if the number is not in the list
begin
  const int n = 10;
  int array[n] A;
  int x, i;
  bool found;

  -- Search A for x
  proc Search
    int m;

    i, m := 1, n;
    while i < m do
      if A[i] == x then
        m := i;
      else if not (A[i] == x) then
        i := i + 1;
      end if;
    end while;

    found := A[i] == x;
  end proc;

  -- Input Table
  i := 1;
  while not (i > n) do
    read A[i];
    i := i + 1;
  end while;

  -- Test Search
  read x;

  while not (x == 0) do
    call Search;

    if found then
      write x, i;
    else if  not found then
      write -1;
    end if;

    read x;
  end while;
end.
