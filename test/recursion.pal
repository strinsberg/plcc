-- Uses recursion to make a given integer 0
-- Will stack overflow if n < -287 or  n > 287
begin
  int n;

  -- Increment a negative number until it reaches 0
  proc zero_neg
    if n == 0 then
      skip;
    else if n < 0 then
        write n;
        n := n + 1;
        call zero_neg;
    end if;
  end proc;

  -- Decrement or increment a number until it reaches 0
  proc zero
    if n == 0 then
      skip;
    else if n > 0 then
        write n;
        n := n - 1;
        call zero;
    else if n < 0 then
        call zero_neg;
    end if;
  end proc;

  -- Read number and zero it
  read n;
  call zero;
  write n;
end.
